<!-- Hero Banner Section -->
<section class="hero-banner bg-light py-5">
    <div class="container">
        <div class="row row align-items-center">
            <div class="col-lg-5 offset-lg-1 order-lg-1">
                <%= image_tag "learning.jpg", class: "img-fluid" %>

            </div>
            <div class="col-lg-6">
                <h1 class="mt-3 animated bounce slow">Funzana, Best collection of free online learning sources</h1>
                <p class="lead text-secondary my-5">Create account to add or suggest the online learning sources
                </p>
                <a href="#" class="btn btn-outline-secondary btn-lg border">Learn More</a>
            </div>
        </div>
    </div>
</section>
<!-- end of hero section -->
<section class="course-list py-5">
    <div class="container course-bg">
        <div class="row">
        
            <% @courses.each do |course| %>
                <div class="col-md-3 col-sm-6 mt-2 pt-2">
                <div class="card border-success text-white mb-3" style="max-width: 18rem;">
                    <div class="card-header"> <h6><%= link_to course.name, course.url, target: :_blank %> </h6></div>
                    <div class="card-body">
                    <p class="card-text"><%= link_to course.url, course.url, target: :_blank %> </p>
                </div>
                </div>
                </div>
            <% end %>
            <%= @user %>
        </div>
        </div>
    <div>
</section>
