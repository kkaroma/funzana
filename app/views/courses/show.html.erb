<p style="color: green"><%= notice %></p>

<div class="row">
  <div class="col-md-8">
    <%= render @course %>

    <div>
      <%= link_to "Edit this course", edit_course_path(@course), class: "btn btn-primary" %> |
      <%= link_to "Back to courses", courses_path, class: "btn btn-primary" %>

      <%= button_to "Destroy this course", course_path(@course), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger mt-2" %>
    </div>
  </div>
  <div class="col-md-4">

  </div>
</div>
